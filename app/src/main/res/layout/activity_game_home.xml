<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    android:background="@drawable/redd"
    tools:context=".Game_home">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="HOME PAGE"
        android:background="@color/black"
        android:textColor="@color/red"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"/>

<GridLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="6"
    android:rowCount="3"
    android:columnCount="2">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:layout_rowWeight="1"
        app:cardBackgroundColor="@color/black"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="180dp"
                android:layout_height="160dp"
                android:src="@drawable/ballred"
                tools:ignore="SpeakableTextPresentCheck"></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="REDBALL"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:layout_rowWeight="1"
        app:cardBackgroundColor="@color/black"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:src="@drawable/tic"
                tools:ignore="SpeakableTextPresentCheck"></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="TIC TAC TOE"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:layout_rowWeight="1"
        app:cardBackgroundColor="@color/black"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:src="@drawable/hang"
                tools:ignore="SpeakableTextPresentCheck"></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="HANGMAN"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:layout_rowWeight="1"
        app:cardBackgroundColor="@color/black"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="180dp"
                android:layout_height="140dp"
                android:src="@drawable/space"
                tools:ignore="SpeakableTextPresentCheck"></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="left"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="SPACE SHOOTER"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_margin="8dp"
        android:layout_rowWeight="1"
        app:cardBackgroundColor="@color/black"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:text="SCORE"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/black"
                android:textStyle="bold"
                android:textSize="30dp"
                tools:ignore="SpeakableTextPresentCheck"></Button>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</GridLayout>


</LinearLayout>